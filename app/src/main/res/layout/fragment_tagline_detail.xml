<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilTagLine"
        android:layout_marginTop="@dimen/padding_top"
        android:layout_marginBottom="@dimen/padding_bottom"
        android:layout_marginLeft="@dimen/padding_left"
        android:layout_marginRight="@dimen/padding_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:padding="4dp"
            android:lines="2"
            android:id="@+id/etTagLine"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/tagline"
            />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilHowTo"
        android:layout_marginTop="@dimen/padding_top"
        android:layout_marginBottom="@dimen/padding_bottom"
        android:layout_marginLeft="@dimen/padding_left"
        android:layout_marginRight="@dimen/padding_right"
        android:layout_below="@+id/tilTagLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:padding="4dp"
            android:minLines="5"
            android:id="@+id/etHowTo"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/howto"
            />
            />

    </android.support.design.widget.TextInputLayout>


</RelativeLayout>