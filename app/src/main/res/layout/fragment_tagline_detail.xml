<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="@dimen/padding_top"
        android:layout_marginBottom="@dimen/padding_bottom"
        android:layout_marginLeft="@dimen/padding_left"
        android:layout_marginRight="@dimen/padding_right"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="@string/tagline"
            />
        <EditText
            android:padding="4dp"
            android:lines="2"
            android:id="@+id/etTagLine"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/please_enter_tagline"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="@dimen/padding_top"
        android:layout_marginBottom="@dimen/padding_bottom"
        android:layout_marginLeft="@dimen/padding_left"
        android:layout_marginRight="@dimen/padding_right"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="@string/howto"
            />
        <EditText
            android:padding="4dp"
            android:minLines="5"
            android:id="@+id/etHowTo"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/please_enter_howto"
            />

    </LinearLayout>

</LinearLayout>